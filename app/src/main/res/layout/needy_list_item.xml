<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/needy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="name surname"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/needy_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/needy_name"
                android:padding="10dp"
                android:text="Mobile Number" />

            <TextView
                android:id="@+id/need_categori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NeedCategori"
                android:padding="10dp"
                android:layout_below="@+id/needy_number"
                />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/need_categori"
                android:text="Address"
                android:padding="10dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentRight="true"
                android:id="@+id/needy_image"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>