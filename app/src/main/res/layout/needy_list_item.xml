<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/needy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:text="name surname"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/needy_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/needy_name"
                android:padding="5sp"
                android:text="Mobile Number" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/needCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/needy_number"
                android:padding="5sp"
                android:text="NeedCategori" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/needyProfilePicture"
                android:layout_width="170sp"
                android:layout_height="200sp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/needCategory"
                android:padding="5sp"
                android:text="Address" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>